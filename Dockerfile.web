# Dockerfile لبناء وتشغيل Flutter Web على Render
FROM ghcr.io/cirruslabs/flutter:stable AS build

WORKDIR /app

# نسخ ملفات المشروع
COPY pubspec.* ./
COPY lib/ ./lib/
COPY web/ ./web/
COPY assets/ ./assets/ 2>/dev/null || true

# تثبيت الاعتمادات
RUN flutter pub get

# بناء التطبيق للويب
RUN flutter build web --release

# استخدام nginx لتقديم الملفات الثابتة
FROM nginx:alpine

# نسخ الملفات المبنية
COPY --from=build /app/build/web /usr/share/nginx/html

# إعدادات nginx
RUN echo 'server { \
    listen 80; \
    server_name _; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

